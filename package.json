{
  "name": "@room-app/monorepo",
  "devDependencies": {
    "craco": "^0.0.3",
    "husky": "4.3.7",
    "lerna": "^4.0.0",
    "lint-staged": "10.5.3",
    "prettier": "2.2.0"
  },
  "lint-staged": {
    "*.{ts,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --parallel --since",
    "dev": "lerna exec --scope room-app-frontend -- npm start",
    "diff": "lerna diff",
    "new-version": "lerna version --conventional-commits --yes",
    "test": "lerna run test --parallel --since"
  },
  "workspaces": [
    "packages/**"
  ]
}
